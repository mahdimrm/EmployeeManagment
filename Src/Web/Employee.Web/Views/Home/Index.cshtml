@{
    ViewData["Title"] = "صفحه اصلی";
}

<div class="content-header row">
    <div class="content-header-left col-12 my-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left">@ViewData["Title"]</h5>
                <div class="breadcrumb-wrapper ">
                    <ol class="breadcrumb p-0 pl-1 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active">
                            @ViewData["Title"]
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<div class="col-md-12">
    <div class="card">
        <div class="col-8">
            <div class="text-success">
                    <h2>
                    تعداد تولد های امروز (@ViewBag.BirthDays)
                    </h2>
                <a asp-action="BirthDate" asp-controller="Employee"><h4>مشاهده تولد ها</h4></a>
            </div>
        </div>
    </div>
</div>
