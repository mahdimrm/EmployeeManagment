@using Employee.Entities;
@model Employee
@{
    Layout = null;
    ViewData["Title"] = "مشاهده پرسنل ";
}

<div class="col-md-12">

    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" type="text" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" type="text" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FatherName" class="control-label"></label>
        <input asp-for="FatherName" type="text" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NationalCode" class="control-label"></label>
        <input asp-for="NationalCode" type="number" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BirthDate" class="control-label"></label>
        <input type="text" value="@Model.BirthDate.ToPersianDate()" disabled class="form-control shamsi-datepicker" asp-for="BirthDate">

    </div>

    <div class="form-group">
        <label asp-for="PersonalCode" class="control-label"></label>
        <input asp-for="PersonalCode" disabled type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" disabled type="number" class="form-control" />
    </div>


    <div class="form-group">
        <label class="control-label">متاهل میباشد</label>
        <input asp-for="IsEngage" disabled type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="MahaleSodoreShenasname" class="control-label"></label>
        <input asp-for="MahaleSodoreShenasname" disabled type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" disabled class="form-control">
            <option value="قراردادی">قراردادی</option>
            <option value="پایور">پایور</option>
            <option value="خرید خدمت">خرید خدمت</option>
        </select>
    </div>


    <div class="form-group">
        <label asp-for="EmployedDateTime" class="control-label"></label>
        <input type="text" value="@Model.EmployedDateTime.ToPersianDate()" disabled class="form-control shamsi-datepicker" asp-for="EmployedDateTime">
    </div>

    <div class="form-group">
        <label asp-for="TedadAeleBaEhtesabSarparast" class="control-label"></label>
        <input asp-for="TedadAeleBaEhtesabSarparast" disabled type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">درجه</label>
        <select asp-for="GradeId" disabled asp-items="ViewBag.Grades" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="PostCode" class="control-label"></label>
        <input asp-for="PostCode" type="text" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <textarea asp-for="Address" disabled class="form-control"></textarea>
    </div>
</div>

