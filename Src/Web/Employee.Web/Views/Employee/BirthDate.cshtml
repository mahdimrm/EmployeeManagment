@using Employee.Abstraction.Common
@using Employee.Web.TagHelper
@model IEnumerable<Employee.Entities.Employee>

@{
    ViewData["Title"] = "تولد ها";
}

<div class="content-header row">
    <div class="content-header-left col-12 my-2">
        <div class="row breadcrumbs-top">
            <div class="col-12">
                <h5 class="content-header-title float-left">@ViewData["Title"]</h5>
                <div class="breadcrumb-wrapper ">
                    <ol class="breadcrumb p-0 pl-1 mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active">
                            @ViewData["Title"]
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<br />


<div class="content-body">
    <section id="person-list-content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content table-responsive">
                        <table class="table mb-0 line-height-1">
                            <thead>
                                <tr>
                                    <th>
                                        درجه
                                    </th>
                                    <th>
                                        نام
                                    </th>
                                    <th>
                                        کد ملی
                                    </th>
                                    <th>
                                        پرسنل
                                    </th>
                                    <th>
                                        شماره پرسنلی
                                    </th>
                                    <th>
                                        نام پدر
                                    </th>
                                    <th>
                                        تولد
                                    </th>
                                    <th>
                                        استخدام
                                    </th>
                                    <th>
                                        تاریخ ایجاد
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="groups-table-body">
                                @foreach (var item in Model)
                                {
                                    <tr id="@item.Id">
                                        <td>
                                            @item.Grade.Name
                                        </td>
                                        <td>
                                            @item.FirstName  @item.LastName
                                        </td>
                                        <td>
                                            @item.NationalCode
                                        </td>
                                        <td>
                                            <h6 class="text-primary">@item.Type</h6>
                                        </td>
                                        <td>
                                            @item.PersonalCode
                                        </td>
                                        <td>
                                            @item.FatherName
                                        </td>
                                        <td>
                                            @item.BirthDate.ToPersianDate()
                                        </td>
                                        <td>
                                            @item.EmployedDateTime.ToPersianDate()
                                        </td>
                                        <td>
                                            @item.InsertDateTime.ToPersianDate()
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>